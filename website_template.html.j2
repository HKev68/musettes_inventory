<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="web.css">
        <link rel="stylesheet" href="https://cdn.datatables.net/2.1.6/css/dataTables.dataTables.css" />
        <script src="https://cdn.datatables.net/2.1.6/js/dataTables.js"></script>
        <script>
            new DataTable('#myTable', {
                fixedHeader: true
            });
        </script>
    </head>
    <body>

        <h1>Musette inventory</h1>
        <table id="myTable" class="display">
            <thead>
                <tr>
                    <th>Team</th>
                    <th>Year</th>
                    <th>Category</th>
                    <th>Picture Front</th>
                    <th>Picture Back</th>
                    <th>Difference</th>
                    <th>Kevin</th>
                    <th>Special Edition</th>
                    <th>URL Front</th>
                    <th>URL Back</th>
                </tr>
            </thead>
            <tbody>
                {% for musette in musette_list %}
                <tr>
                <th>{{ musette.team }}</th>
                <th>{{ musette.year }}</th>
                <th>{{ musette.category }}</th>
                {% if musette.url_front == "" %}
                <td></td>
                {% else %}
                <td><img src="{{ musette.url_front }}"></td>
                {% endif %}
                {% if musette.url_back == "" %}
                <td></td>
                {% else %}
                <td><img src="{{ musette.url_back }}"></td>
                {% endif %}
                <th>{{ musette.difference }}</th>
                <th>{{ musette.kevin }}</th>
                <th>{{ musette.special }}</th>
                <th>{{ musette.url_front }}</th>
                <th>{{ musette.url_back }}</th>
                </tr>
                {% endfor %}
            </tbody>
        </table>

    </body>
</html>